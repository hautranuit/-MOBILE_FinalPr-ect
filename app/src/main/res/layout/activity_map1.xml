<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Map_1">

    <!-- FragmentContainerView để hiển thị bản đồ -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/id_map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- SearchView cho thanh tìm kiếm -->
    <SearchView
        android:id="@+id/mapSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:queryHint="Search..."
        android:iconifiedByDefault="false"
        android:elevation="5dp"
        android:background="@drawable/bg_search_view"
        android:layout_alignParentTop="true"
        android:layout_marginTop="16dp" />

    <!-- Panel chứa các nút điều hướng và định vị, bo tròn và có nền trắng -->
    <androidx.cardview.widget.CardView
        android:id="@+id/buttonPanel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#FFFFFF"
        android:elevation="8dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        android:padding="8dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <!-- Nút định vị vị trí hiện tại -->
            <ImageButton
                android:id="@+id/currentLocationButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@android:color/transparent"
                android:contentDescription="Current Location"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_my_location"
                android:layout_marginEnd="8dp" />

            <!-- Nút điều hướng -->
            <ImageButton
                android:id="@+id/navigateButton"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Navigate"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_navigation" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
